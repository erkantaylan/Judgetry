@page "/"
@using Judgetry.Web.Database
@using Judgetry.Web.Database.Dtos
@using Microsoft.AspNetCore.Authorization
@inject UnitOfWork UnitOfWork
@inject AuthenticationStateProvider AuthStateProvider;
@attribute [Authorize]

<PageTitle>Home</PageTitle>

<div class="container mt-5">
    <h1 class="text-center mb-4">Okuma Takibi ve Cezalar</h1>

    <div class="mt-3 mb-3">
        <div class="row row-cols-lg-auto g-3 align-items-center">
            <div class="col-12">
                <input type="text" class="form-control" @bind="book" id="bookName" name="bookName" placeholder="Book Name" required>
            </div>
            <div class="col-12">
                <input type="number" class="form-control" @bind="pageRead" id="pageCount" name="pageCount" placeholder="Page Count" required min="1">
            </div>
            <div class="col-12">
                <input type="date" class="form-control" @bind="readDate" id="readDate" name="readDate" required>
            </div>
            <div class="col-12">
                <button type="submit" @onclick="OnAdd" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h2 class="card-title">Okumayanlar ve Cezalar</h2>
                </div>
                <div class="card-body">
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>İsim</th>
                            <th>Tarih</th>
                            <th>Ceza Miktarı (TL)</th>
                        </tr>
                        </thead>
                        <tbody>

                        @foreach (Penalty penalty in penalties)
                        {
                            <tr>
                                <td>@penalty.DisplayName</td>
                                <td>@penalty.ResetDate</td>
                                <td>@penalty.Price</td>
                            </tr>
                        }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h2 class="card-title">Okuyanlar</h2>
                </div>
                <div class="card-body">
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>İsim</th>
                            <th>Tarih</th>
                            <th>Kitap Adı</th>
                            <th>Okunan Sayfa</th>
                        </tr>
                        </thead>

                        <tbody>
                        @foreach (ReadingEntry entry in readings)
                        {
                            <tr>
                                <td>@entry.User!.DisplayName</td>
                                <td>@entry.ReadDate.ToString("M")</td>
                                <td>@entry.Book</td>
                                <td>@entry.PageRead</td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>


</div>